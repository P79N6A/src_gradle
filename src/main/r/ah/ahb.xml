<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/a5j" android:layout_width="match_parent" android:layout_height="440dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/chs" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#161823" android:gravity="center" android:layout_gravity="center" android:id="@+id/chq" android:layout_width="wrap_content" android:layout_height="48dp"/>
        <TextView android:textSize="12sp" android:textColor="#4c161823" android:gravity="bottom|left|center_vertical|center_horizontal|center|start" android:layout_gravity="start" android:id="@+id/chr" android:background="@color/adw" android:paddingLeft="8dp" android:paddingBottom="7dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp"/>
        <View android:background="@color/adw" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView android:id="@+id/cho" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/chs"/>
